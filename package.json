{
  "name": "css-controls",
  "displayName": "CSS Controls",
  "description": "Controls for CSS",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "capabilities": {
    "hoverProvider" : "true"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-controls.cycleStep",
        "title": "CSS Controls: Cycle Step"
      },
      {
        "command": "css-controls.increaseStep",
        "title": "CSS Controls: Increase Step"
      },
      {
        "command": "css-controls.decreaseStep",
        "title": "CSS Controls: Decrease Step"
      },
      {
        "command": "css-controls.incrementNumber",
        "title": "CSS Controls: Increment Number"
      },
      {
        "command": "css-controls.decrementNumber",
        "title": "CSS Controls: Decrement Number"
      }
    ],
    "codeLens": [
      {
        "language": "css",
        "scheme": "file"
      },
      {
        "language": "scss",
        "scheme": "file"
      },
      {
        "language": "less",
        "scheme": "file"
      }
    ],
    "keybindings": [
      {
        "command": "css-controls.incrementNumber",
        "key": "alt+up",
        "when": "css-controls.hasActiveNumber"
      },
      {
        "command": "css-controls.decrementNumber",
        "key": "alt+down",
        "when": "css-controls.hasActiveNumber"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
