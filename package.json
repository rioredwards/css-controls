{
  "name": "css-controls",
  "displayName": "CSS Controls",
  "description": "Controls for quick CSS/Tailwind tuning.",
  "version": "1.0.0",
  "publisher": "RioEdwards",
  "author": "Rio Edwards <rioredwards@gmail.com>", 
  "homepage": "https://github.com/rioredwards/css-controls",
  "icon": "images/CSS_Controls_Icon.png",
  "keywords": [
    "css",
    "tailwind",
    "controls",
    "shortcut",
    "codelens",
    "quick",
    "tuning",
    "css-controls",
    "css-controls-extension",
    "rio",
    "rio edwards",
    "rioredwards"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rioredwards/css-controls.git"
  },
  "bugs": {
    "url": "https://github.com/rioredwards/css-controls/issues"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Language Packs",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:html",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "capabilities": {
    "hoverProvider" : "true"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-controls.cycleStep",
        "title": "CSS Controls: Cycle Step"
      },
      {
        "command": "css-controls.increaseStep",
        "title": "CSS Controls: Increase Step"
      },
      {
        "command": "css-controls.decreaseStep",
        "title": "CSS Controls: Decrease Step"
      },
      {
        "command": "css-controls.incrementNumber",
        "title": "CSS Controls: Increment Number"
      },
      {
        "command": "css-controls.decrementNumber",
        "title": "CSS Controls: Decrement Number"
      },
      {
        "command": "css-controls.jumpToNextNumber",
        "title": "CSS Controls: Jump to Next Number"
      },
      {
        "command": "css-controls.jumpToPreviousNumber",
        "title": "CSS Controls: Jump to Previous Number"
      }
    ],
    "codeLens": [
      {
        "language": "css",
        "scheme": "file"
      },
      {
        "language": "scss",
        "scheme": "file"
      },
      {
        "language": "less",
        "scheme": "file"
      },
      {
        "language": "html",
        "scheme": "file"
      },
      {
        "language": "javascriptreact",
        "scheme": "file"
      },
      {
        "language": "typescriptreact",
        "scheme": "file"
      }
    ],
    "keybindings": [
      {
        "key": "cmd+up",
        "command": "css-controls.incrementNumber",
        "when": "css-controls.hasActiveNumber"
      },
      {
        "key": "cmd+down",
        "command": "css-controls.decrementNumber",
        "when": "css-controls.hasActiveNumber"
      },
      {
        "key": "cmd+shift+up",
        "command": "css-controls.increaseStep",
        "when": "css-controls.hasActiveNumber"
      },
      {
        "key": "cmd+shift+down",
        "command": "css-controls.decreaseStep",
        "when": "css-controls.hasActiveNumber"
      },
      {
        "key": "cmd+right",
        "command": "css-controls.jumpToNextNumber",
        "when": "css-controls.hasActiveNumber"
      },
      {
        "key": "cmd+left",
        "command": "css-controls.jumpToPreviousNumber",
        "when": "css-controls.hasActiveNumber"
      }     
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
